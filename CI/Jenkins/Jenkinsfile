/* groovylint-disable GStringExpressionWithinString */
pipeline {
    agent any
    environment {
        FOLDER_GLPI ='/usr/share/glpi/'
        TAG_URL = 'https://github.com/glpi-project/glpi/releases/tag'
    }
    stages {
        stage('Collect Variables') {
            steps {
                echo "Version Choice is: ${GLPI_VERSION}"
                echo "SO Versions is: ${SO_VERSION}"
                echo "Folder GLPI is: ${FOLDER_GLPI}"
            }
        }
        stage('Prepare Environment') {
            steps {
                script {
                    sh 'sudo rm -rf ${FOLDER_GLPI}'
                    sh 'sudo mkdir ${FOLDER_GLPI}'
                    sh 'wget -qO - "${TAG_URL}/$GLPI_VERSION.tgz" | sudo tar -xzvf - -C ${FOLDER_GLPI} --strip-component 1'
                }
            }
        }
    }
}
